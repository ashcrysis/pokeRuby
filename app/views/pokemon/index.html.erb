<!-- app/views/pokemon/index.html.erb -->
<link rel="stylesheet" href="/assets/main.css"> 
<body id="main_page_body">
<%= form_tag pokemon_path, method: :get do %>
  <%= text_field_tag :pokemon_name, params[:pokemon_name], placeholder: "Enter Pokemon name", id: "pokemon_name_input"  , style:"margin-top:100px;margin-bottom:15px;"%>
  <%= submit_tag "Search" ,onClick: "clearInput()"%>
<% end %>
<script>
    function clearInput() {
        setTimeout(function() {
            document.getElementById("pokemon_name_input").value = "";
    }, 500);
  }
</script>
<div>
<h1 id="pokemon_name"><%= @pokemon_name.capitalize + " | #{@pokemon_id}"%></h1>
<%= image_tag @pokemon_image_url, alt: @pokemon_name, id: "pokemon_image",style:"margin-bottom:-100px;" %>
<p id="pokemon_type">Type/s: <%= @pokemon_type.capitalize%></p>

<p > Heigth : <%= @pokemon_height %> cm | Weight : <%= @pokemon_weight %> kg | Moves : <%= @pokemon_moves %></p>
<p style="font-size:large;"><%= @flavor_text%> </p>
<h2 style="margin-top:10px;">Base stats</h2>
<% @stats.each do |stat_name, base_stat| %>
  <div>
    <%= stat_name.capitalize %>: <%= base_stat %>
  </div>
<% end %>
